                                htmlTable += '<td>'+'<a href="'+record.quote3__c+'" target="_blank">Click to View Quote</a></td>';
                              }
                              else{
                                htmlTable +='<td></td>';
                              }
                              //htmlTable += '<td>'+record.quote3__c+'</td>';
