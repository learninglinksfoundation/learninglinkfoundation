                              htmlTable += '<td>'+record.number_of_quotes__c+'</td>';
                              htmlTable += '</tr>';
                              htmlTable += '<td><strong>Justification</strong></td>';
                              htmlTable += '<td>'+record.justification__c+'</td>';
                              htmlTable += '<td><strong></strong></td>';
                              htmlTable += '<td></td>';
                              htmlTable += '</tr>';

                      
                            $('#procTable').empty();
                            $('#procTable').html(htmlTable);

                            let feed = response.feedback !== undefined && response.feedback !== null && response.feedback.length === 0
                            let acApproval = record.accountapproval === 'Approved';

                            if(acApproval && feed){
                              $('button.feedback').attr('disabled',false)
                              createFeedback(procurementId);
                            } else{
                              $('button.feedback').unbind('click');
                               $('button.feedback').attr('disabled',true)
                            }
                }
                vendorDetailFunction();
                //createFeedback(procurementId);
                if(response.feedback.length>0){
                  let ftable='';
                  ftable +='<thead><th>Feedback Name</th><th>Quantity Requested vs Received</th><th>Timely submissions of all Deliverables</th><th>Work Quality/Goods Quality</th><th>Issue Knowledge/ Expertise</th>';
                  response.feedback.forEach((eachRecord)=>{
                    ftable +='<tr>';
                      ftable +='<td>'+eachRecord.name+'</td>';
                      ftable +='<td>'+eachRecord.quantity_requested_vs_received__c+'</td>';
                      ftable +='<td>'+eachRecord.timely_submissions_of_all_deliverables__c+'</td>';
                      ftable +='<td>'+eachRecord.work_quality_goods_quality__c+'</td>';  
                      ftable +='<td>'+eachRecord.issue_knowledge_expertise__c+'</td>';
                    ftable +='</tr>';
                  })
                  ftable+=  '<td colspan="6"><center><a target="_blank" href="/procurement/getfeedback/'+procurementId+'">View All</a></centre></td>';
                  $('#feedbackTable').empty();
                    $('#feedbackTable').html(ftable);
                }
            })
            .fail((jqXHR, status, error) =>{
                $('#detailLoadingSpinner').show();
                console.log('jqXHR  : '+JSON.stringify(jqXHR));
                console.log('error  : '+error);
              })

        function createFeedback(proid){
         // alert('procId'+proid);
         $('button.feedback').unbind('click');
          $('button.feedback').click(() => {
            console.log('proccurement id '+proid);
          //  location.assign('/procurement/createFeedback/'+proid);
            window.open('/procurement/createFeedback/'+proid,'_blank');
        });
        }

        function vendorDetailFunction(){
          $('a.vendorDetTag').on('click',function(event){
            event.stopPropagation();
            event.stopImmediatePropagation();
            let vendorId = this.id;
          //  alert('vendor id '+vendorId);
           // location.href = "/procurement/getVondor/"+vendorId;
            location.href = "/procurement/getvendorListView/";             
        })
      }


    })
        </script>