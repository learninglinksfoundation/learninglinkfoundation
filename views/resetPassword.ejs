<style>

    html, body {
        height: 100%;
        margin: 0;
        padding: 0;
    }
    #container {
    /* 	 min-height:80%; */
       margin-left:auto;
        margin-right:auto;
        width:70%;
        overflow-y: hidden;
        overflow-x: hidden;
    }
