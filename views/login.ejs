<style>

  html, body {
      height: 100%;
      margin: 0;
      padding: 0;
  }
  #container {
  /* 	 min-height:80%; */
      margin-left:auto;
      margin-right:auto;
      width:50%;
      overflow-y: hidden;
      overflow-x: hidden;
      flex-grow:1;
      background:rgb(174, 216, 230)
  }
    </style>

      <!DOCTYPE html>
      <html>
        <body>
          <div style="display:flex;height:99%">

      <div id="container">
 <div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body" style="margin-top:15px">
          <% include ./partials/messages %>
          <img src="/image/logo.png"  style="align-self:center; width:100%">
          <h1 class="text-center mb-3"> Login</h1>
      
        <form action="/users/login" method="POST">
          <div class="form-group">
            <label for="email">Username</label>
            <input
              type="email"
              id="email"
              name="email"
              class="form-control"
              placeholder="Enter Email"
            />
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input
              type="password"
              id="password"
              name="password"
              class="form-control"
              placeholder="Enter Password"
            />
          </div>
          <div style="display: flex;
          justify-content: flex-start;
          align-items: center;">
            <input type="checkbox" id="remember" name="remember">
            <label for="remember" id="remember">Remember me</label>
          </div>
          <button type="submit" class="btn btn-primary btn-block">Login</button>
        </form>
        <p class="lead mt-4">
           <a href="/users/forgotpassword">Forgot Password?</a>
        </p>
      </div>
    </div>
  </div>
</div>

<div style="width:50%">
  <iframe src="https://www.learninglinksindia.org/" width="100%" height="100%" title="llf"></div></iframe>
</div>
</div>

</body>
</html>