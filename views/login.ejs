      <!DOCTYPE html>
      <html>
        <body>
          <div style="display:flex;height:100%;overflow:hidden">

      <div id="container">
 <div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body" style="margin-top:15px">
          <% include ./partials/messages %>
          <img src="/image/logo.png"  style="align-self:center; width:100px">
          <h1 class="text-center mb-3"> Login</h1>
      
        <form action="/users/login" method="POST">
          <div class="form-group">
            <label for="email">Username</label>
            <input
              type="email"
              id="email"
              name="email"
              class="form-control"
              placeholder="Enter Email"
            />
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input
              type="password"
              id="password"
              name="password"
              class="form-control"
              placeholder="Enter Password"
            />
          </div>
          <div style="display: flex;justify-content:flex-start;align-items: center;margin:10px 0px">
            <input type="checkbox" id="remember" name="remember" onclick="callStorage()">
            <div style="margin:0px 4px;">Remember me12</div>
          </div>

              <script>
                  const remcheck=document.getElementById("remember");
                  const usern=document.getElementById("email");
                  if(localStorage.checkbox!==''){
                    remcheck.setAttribute("checked","checked");
                    usern.value=localStorage.username;
                  }else {
                    remcheck.removeAttribute("checked");
                    usern.value="";
                  }
                  function callStorage(){
                    if(remcheck.Checked&&usern.value!==""){
                      localStorage.username=usern.value;
                      localStorage.checkbox=remcheck.value;
                    }else {
                      localStorage.username="";
                      localStorage.checkbox="";
                    }

                  }
              </script>
              
          <button type="submit" class="btn btn-primary btn-block">Login</button>
        </form>
        <p class="lead mt-4">
           <a href="/users/forgotpassword">Forgot Password?</a>
        </p>
      </div>
    </div>
  </div>
</div>

